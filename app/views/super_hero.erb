<h1>Create a Team and Heroes!</h1>

<form action='/teams' method="POST">
  <p>
    <label>Team Name:</label>
    <input type="text" name="team[name]" >
    <br>
    <label>Team Motto:</label>
    <input type="text" name="team[motto]" >
  </p>

  <p>
    <h2>1st Hero</h2>
    <label>Hero's Name</label>
    <input id="hero1_name" type="text" name="team[heros][][name]" >
    <br>
    <label>Hero's Power</label>
    <input id="hero1_power" type="text" name="team[heros][][power]" >
    <br>
    <label>Hero's Biography</label>
    <input id="hero1_bio" type="text" name="team[heros][][bio]" >
  </p>

  <p>
    <h2>Second Hero</h2>
    <label>Hero's Name</label>
    <input id="hero2_name" type="text" name="team[heros][][name]" >
    <br>
    <label>Hero's Power</label>
    <input id="hero2_power" type="text" name="team[heros][][power]" >
    <br>
    <label>Hero's Biography</label>
    <input id="hero2_bio" type="text" name="team[heros][][bio]" >
  </p>

  <p>
    <h2>Third Hero</h2>
    <label>Hero's Name</label>
    <input id="hero3_name" type="text" name="team[heros][][name]" >
    <br>
    <label>Hero's Power</label>
    <input id="hero3_power" type="text" name="team[heros][][power]" >
    <br>
    <label>Hero's Biography</label>
    <input id="hero3_bio" type="text" name="team[heros][][bio]" >
  </p>

<button type="submit" value="submit">Submit</button>
</form>
